<%- include ('../componen/header') %>
<%- include ('../componen/sideNav') %>

<div id="loading-overlay" class="loading-overlay">
  <div class="spinner"></div>
</div>

<div class="content-wrapper">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-dark">
          <h2 class="card-title">List pasien</h2>
          <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input id="table-search" type="text" name="table_search" class="form-control float-right" placeholder="Search">
              <div class="input-group-append">
                <button id="search-button" type="submit" class="btn btn-default">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0" style="height: 450px;">
          <table class="table table-head-fixed text-nowrap table-striped">
            <thead>
              <tr>
                <th>No. Reg</th>
                <th>No. Pasien</th>
                <th>Tanggal</th>
                <th>No. SJP</th>
                <th>Nama Pasien</th>
                <th>Gol Pasien</th>
               
              </tr>
            </thead>
            <tbody class="list">
              <% patients.forEach(patient => { %>
                <tr data-no-reg="<%= patient.no_reg %>">
                  <td><%= patient.no_reg %></td>
                  <td><%= patient.no_pasien %></td>
                  <td><%= new Date(patient.tanggal).toISOString().split('T')[0] %></td>
                  <td><%= patient.no_sjp %></td>
                  <td><%= patient.nama_pasien %></td>
                  <td><%= patient.gol_pasien %></td>
                 
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>

  <div class="col-md-3 col-sm-4 col-9">
    <div class="d-flex align-items-start">
      <div class="info-box bg-info flex-grow-1">
        <span class="info-box-icon bg-info"><i class="fas fa-users"></i></span>
        <div class="info-box-content">
          <span class="info-box-text">total pasien</span>
          <span class="info-box-number"><h4><%= patientcounts %></h4></span>
        </div>
        <!-- /.info-box-content -->
      </div>
      <!-- /.info-box -->
      <div class="ml-2 d-flex justify-content-between">
        <button class="btn btn-danger ml-auto" id="verify-button">verifikasi</button>
      </div>
      <div class="ml-2 d-flex justify-content-between">
        <button class="btn btn-success ml-auto" id="call-button">panggil</button>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="verifyModal" tabindex="-1" role="dialog" aria-labelledby="verifyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="verifyModalLabel">Verify Patient Data</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class="row">
              <div class="col-6">
                <p><strong>No. Reg:</strong> <span id="modalNoReg"></span></p>
              </div>
              <div class="col-6">
                <p><strong>No. Pasien:</strong> <span id="modalNoPasien"></span></p>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <p><strong>Tanggal:</strong> <span id="modalTanggal"></span></p>
              </div>
              <div class="col-6">
                <p><strong>No. SJP:</strong> <span id="modalNoSjp"></span></p>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <p><strong>Nama Pasien:</strong> <span id="modalNamaPasien"></span></p>
              </div>
              <div class="col-6">
                <p><strong>Gol Pasien:</strong> <span id="modalGolPasien"></span></p>
              </div>
            </div>
          </div>
          <div class="section" onclick="toggleSection(this)">
            <div class="section-title"><h5>1. RESUME</h5><span class="toggle-icon">+</span></div>
            <div class="section-content">
              <div id="resumeDetails">
                
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="confirmVerify">Confirm Verification</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Hide the loading overlay once the content is loaded
      document.getElementById("loading-overlay").style.display = "none";

      const searchButton = document.getElementById("search-button");
      const searchInput = document.getElementById("table-search");

      searchButton.addEventListener("click", function(event) {
        event.preventDefault(); // Prevent the default form submission
        const searchQuery = searchInput.value; // Get the search query

        if (searchQuery) {
          // Show the loading overlay
          document.getElementById("loading-overlay").style.display = "flex";

          // Simulate a search request
          setTimeout(() => {
            // After the search request is completed, hide the loading overlay
            document.getElementById("loading-overlay").style.display = "none";
            // Perform the search action here (e.g., make an AJAX request)
            console.log("Search query:", searchQuery);
            // For demonstration purposes, you can remove the above line and uncomment the below line
            // window.location.href = `/search?query=${searchQuery}`; // Redirect to search results page
          }, 1000); // Adjust the delay as needed
        }
      });

      // Handle row click and store selected data
      let selectedData = null;
      const rows = document.querySelectorAll('.list tr');
      rows.forEach(row => {
        row.addEventListener('click', function() {
          selectedData = {
            noReg: this.children[0].textContent,
            noPasien: this.children[1].textContent,
            tanggal: this.children[2].textContent,
            noSjp: this.children[3].textContent,
            namaPasien: this.children[4].textContent,
            golPasien: this.children[5].textContent,
          };
          rows.forEach(r => r.classList.remove('selected'));
          this.classList.add('selected');
        });
      });

      // Handle verify button click to show modal
      const verifyButton = document.getElementById('verify-button');
    verifyButton.addEventListener('click', function() {
      if (selectedData) {
        document.getElementById('modalNoReg').textContent = selectedData.noReg;
        document.getElementById('modalNoPasien').textContent = selectedData.noPasien;
        document.getElementById('modalTanggal').textContent = selectedData.tanggal;
        document.getElementById('modalNoSjp').textContent = selectedData.noSjp;
        document.getElementById('modalNamaPasien').textContent = selectedData.namaPasien;
        document.getElementById('modalGolPasien').textContent = selectedData.golPasien;
        $('#verifyModal').modal('show');
      } else {
        alert('Please select a patient row to verify.');
      }
    });

    // Handle confirm verification
    document.getElementById('confirmVerify').addEventListener('click', function() {
      if (selectedData) {
        console.log('Verified data:', selectedData);
        // Perform verification logic here (e.g., AJAX request to verify data)
        $('#verifyModal').modal('hide');
      }
    });

      // Socket Io untuk memanggil pasien
      const socket = io();
      // untuk tombol panggil dan menampilkan panggilan
      const callButton = document.getElementById("call-button"); //id button panggil
      callButton.addEventListener('click', function() {
        if (selectedData) {
          socket.emit('callPatient', selectedData);
        } else {
          alert("Please select a patient");
        }
      });

      // untuk menampilkan pop up jika memanggil pasien
      socket.on('patientCalled', function(data) {
        $('body').append(`
          <div class="popup">
            <div class="popup-content">
              <span class="close">&times;</span>
              <h2>Panggilan untuk pasien</h2>
              <p>No. Reg: ${data.noReg}</p>
              <h4>Nama Pasien: ${data.namaPasien}</h4>
            </div>
          </div>
        `);
        // Untuk menutup popup
        $('.popup-content .close').on('click', function() {
          $(this).closest('.popup').remove();
        });
      });
    });

    function toggleSection(section) {
      var content = section.querySelector('.section-content');
      var icon = section.querySelector('.toggle-icon');

      if (content.style.display === 'none') {
        content.style.display = 'block';
        icon.textContent = '-';
      } else {
        content.style.display = 'none';
        icon.textContent = '+';
      }
    }
  </script>

<%- include ('../componen/footer') %>
