<script>

document.addEventListener("DOMContentLoaded", function() {
  const rows = document.querySelectorAll(".list tr");

  rows.forEach(row => {
    row.addEventListener("click", function() {
      rows.forEach(r => r.classList.remove("selected"));
      this.classList.add("selected");
    });
  });

  document.getElementById("verify-button").addEventListener("click", async function() {
    const selectedRow = document.querySelector(".list tr.selected");
    if (!selectedRow) {
      alert("Pilih pasien terlebih dahulu.");
      return;
    }

    const data = Array.from(selectedRow.children).map(cell => cell.textContent);
    const patientId = data[1];

    // Ambil data resume dari server
    try {
      const response = await fetch(`/patients/${patientId}/resume`);
      const resumeData = await response.json();

      // Isi modal dengan data resume
      document.getElementById("modalNoReg").textContent = data[0];
      document.getElementById("modalNoPasien").textContent = data[1];
      document.getElementById("modalTanggal").textContent = data[2];
      document.getElementById("modalNoSjp").textContent = data[3];
      document.getElementById("modalNamaPasien").textContent = data[4];
      document.getElementById("modalGolPasien").textContent = data[5];

      document.getElementById("resumeNama").textContent = data[4];
      document.getElementById("resumeNoRm").textContent = data[1];
      document.getElementById("resumeTanggalLahir").textContent = resumeData[0].tanggal_lahir;

      const resumeTableBody = document.getElementById("resumeTableBody");
      resumeTableBody.innerHTML = ''; // Kosongkan isi tabel sebelumnya
      resumeData.forEach((item, index) => {
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${index + 1}</td>
          <td>${item.no_reg}</td>
          <td>${item.tanggal_kunjungan}</td>
          <td>${item.poliklinik}</td>
          <td>${item.diagnosa}</td>
          <td>${item.pengobatan}</td>
          <td>${item.alergi}</td>
          <td>${item.tindakan_operasi}</td>
          <td>${item.paraf_dpjp}</td>
          <td>${item.icd_x}</td>
        `;
        resumeTableBody.appendChild(row);
      });

      $('#verifyModal').modal('show');
    } catch (err) {
      console.error('Failed to fetch resume data:', err);
    }
  });
});

  
  function toggleSection(section) {
    const content = section.querySelector('.section-content');
    const icon = section.querySelector('.toggle-icon');
    if (content.style.display === 'none' || content.style.display === '') {
        content.style.display = 'block';
        icon.textContent = '-';
    } else {
        content.style.display = 'none';
        icon.textContent = '+';
    }
}

  document.addEventListener("DOMContentLoaded", function() {
    // Hide the loading overlay once the content is loaded
    document.getElementById("loading-overlay").style.display = "none";

    const searchButton = document.getElementById("search-button");
    const searchInput = document.getElementById("table-search");

    searchButton.addEventListener("click", function(event) {
      event.preventDefault(); // Prevent the default form submission
      const searchQuery = searchInput.value; // Get the search query

      if (searchQuery) {
        // Show the loading overlay
        document.getElementById("loading-overlay").style.display = "flex";

        // Simulate a search request
        setTimeout(() => {
          // After the search request is completed, hide the loading overlay
          document.getElementById("loading-overlay").style.display = "none";
          // Perform the search action here (e.g., make an AJAX request)
          console.log("Search query:", searchQuery);
          // For demonstration purposes, you can remove the above line and uncomment the below line
          // window.location.href = `/search?query=${searchQuery}`; // Redirect to search results page
        }, 1000); // Adjust the delay as needed
      }
    });

    // Handle row click and store selected data
    let selectedData = null;
    const rows = document.querySelectorAll('.list tr');
    rows.forEach(row => {
      row.addEventListener('click', function() {
        selectedData = {
          noReg: this.children[0].textContent,
          noPasien: this.children[1].textContent,
          tanggal: this.children[2].textContent,
          noSjp: this.children[3].textContent,
          namaPasien: this.children[4].textContent,
          golPasien: this.children[5].textContent,
        };
        rows.forEach(r => r.classList.remove('selected'));
        this.classList.add('selected');
      });
    });

    // Handle verify button click to show modal
    const verifyButton = document.getElementById('verify-button');
    verifyButton.addEventListener('click', function() {
      if (selectedData) {
        document.getElementById('modalNoReg').textContent = selectedData.noReg;
        document.getElementById('modalNoPasien').textContent = selectedData.noPasien;
        document.getElementById('modalTanggal').textContent = selectedData.tanggal;
        document.getElementById('modalNoSjp').textContent = selectedData.noSjp;
        document.getElementById('modalNamaPasien').textContent = selectedData.namaPasien;
        document.getElementById('modalGolPasien').textContent = selectedData.golPasien;
        $('#verifyModal').modal('show');
      } else {
        alert('Please select a patient row to verify.');
      }
    });

    // Handle confirm verification
    document.getElementById('confirmVerify').addEventListener('click', function() {
      if (selectedData) {
        console.log('Verified data:', selectedData);
        // Perform verification logic here (e.g., AJAX request to verify data)
        $('#verifyModal').modal('hide');
      }
    });
 
  // Socket Io untuk memanggil pasien
  const socket = io();
  // untuk tombol panggil dan menampilkan panggilan
  const callButton = document.getElementById("call-button");//id button panggil
  callButton.addEventListener('click', function(){
    if(selectedData){
      socket.emit('callPatient', selectedData);
    }else{
      alert("Please select a patient");
    }
  });

  //untuk menampilkan pop up jika memanggil pasien
  socket.on('patientCalled', function(data){
    $('body').append(`
    <div class= "popup">
      <div class= "popup-content">
        <span class="close">&times;</span>
        <h2>Panggilan untuk pasien</h2>
        <p>No. Reg: ${data.noReg}</p>
        <h4>Nama Pasien: ${data.namaPasien}</h4>
        </div>
       </div>
    `);
    // Untuk menutup poup
    $('.popup-content .close').on('click', function(){
      $(this).closest('.popup').remove();
    });
  });
});


</script>
