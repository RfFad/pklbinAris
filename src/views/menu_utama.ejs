  <script>
        

    document.addEventListener("DOMContentLoaded", function() {
      const infoBoxLinks = document.querySelectorAll('.info-box a');

      infoBoxLinks.forEach(link => {
        link.addEventListener('click', function(event) {
          event.preventDefault(); // Prevent the default link behavior
          const targetUrl = this.getAttribute('href'); // Get the target URL

          // Show the loading overlay
          document.getElementById("loading-overlay").style.display = "flex";

          // Navigate to the target URL after a short delay to show the spinner
          setTimeout(() => {
            window.location.href = targetUrl;
          }, 1000); // Adjust the delay as needed
        });
      });
    });
